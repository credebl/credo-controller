{
  "extends": "./tsconfig.build.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "credo-controller/*": ["*/src"]
    },
    "lib": ["ES2021.Promise"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["jest", "node"],
    "typeRoots": [
      "@types",
      "./node_modules/@types",
      "src/types" // Add your custom types directory
    ]
  },
  "exclude": ["node_modules", "build"]
}
