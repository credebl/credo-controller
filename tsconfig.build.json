{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "lib": ["ES2021"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "outDir": "./build"
  },
  "include": ["src/**/*", "src/routes"],
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.ts",
    "**/__tests__/*.ts",
    "**/__mocks__/*.ts",
    "**/build/**",
    "scripts"
  ]
}
